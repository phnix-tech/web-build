{
  "name": "@web-io/build",
  "version": "0.2.2",
  "description": "web builds scripts",
  "author": "leejefy <050934@gmail.com>",
  "homepage": "https://gitee.com/phoenix-tech/web-build",
  "dependencies": {
    "mkdirp": "0.5.1",
    "tar": "4.4.8",
    "chalk": "2.4.2",
    "semver": "5.6.0",
    "shelljs": "0.8.3",
    "portfinder": "1.0.20"
  },
  "devDependencies": {
    "@web-io/lint": "0.4.1",
    "eslint": "6.8.0",
    "@grmn/test": "0.0.1",
    "mocha": "6.2.0",
    "@grmn/doc": "0.0.1",
    "uglify-js": "2.8.29",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.0"
  },
  "scripts": {
    "build": "run-s pre-build build-task",
    "test": "mocha --config ./node_modules/@grmn/test/.mocharc.js",
    "check-versions": "node ./build/check-versions.js",
    "pre-build": "run-s check-versions eslint test",
    "build-task": "run-p jsdoc build-fe",
    "build-fe": "run-s babel-fe uglify-fe",
    "babel-fe": "babel ./fe --out-dir ./dist/fe",
    "uglify-fe": "uglifyjs ./dist/fe/Logging.js --compress --mangle --output ./dist/fe/Logging.js && uglifyjs ./dist/fe/Functions.js --compress --mangle --output ./dist/fe/Functions.js",
    "eslint": "run-p eslint-be eslint-fe",
    "eslint-fe": "eslint --config ./node_modules/@web-io/lint/eslint/.eslintrc-fe.js ./fe/**",
    "eslint-be": "eslint --config ./node_modules/@web-io/lint/eslint/.eslintrc.js ./*.js ./be/** ./test/**/*.js",
    "clean:docs": "rimraf ./docs",
    "_jsdoc": "jsdoc -c ./.jsdocrc.js",
    "jsdoc": "run-s clean:docs _jsdoc"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/phoenix-tech/web-build.git"
  },
  "engines": {
    "node": ">= 12.16.1",
    "npm": ">= 6.13.4"
  }
}
